{% extends "_layouts/_global_variables.twig" %}

{%- block htmlPage -%}
	<!DOCTYPE html>

		{% block htmlTag %}
			<html lang="{{ craft.app.language |slice(0,2) }}">
		{% endblock htmlTag %}

		{% block headTag %}
			<head>
		{% endblock headTag %}
			{% include "_boilerplate/_head_meta.twig" %}
			{# -- Page content that should be included in the <head> -- #}
			{% block headContent %}{% endblock headContent %}
			</head>

			{% block bodyTag %}
			<body>
			{% endblock bodyTag %}
				{% block svgSprite %}{% endblock %}
				{# -- Page content that should be included in the <body> -- #}
				{% block bodyContent %}{% endblock bodyContent %}
			</body>
	</html>
{%- endblock htmlPage -%}
